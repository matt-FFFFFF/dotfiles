"$schema" = 'https://starship.rs/config-schema.json'

# colors
# #3960A7 - dark blue
# #659CD9 - mid blue
# #4A4A4A - dary grey
# #F2F2F2 - near white
# #9C9C9C - mid gray

format = """\
[î‚¶](fg:#659CD9)\
$os\
$sudo\
$shell\
[î‚°](fg:#659CD9 bg:#3960A7)\
$directory\
[î‚°](fg:#3960A7 bg:#9C9C9C)\
$git_branch\
$git_commit\
$git_status\
$git_state\
[î‚°](fg:#9C9C9C bg:#F2F2F2)\
($git_metrics)\
[î‚°](fg:#F2F2F2)\
$fill\
$status\
$all\
$cmd_duration\
$line_break\
$character"""

# disabled due to fill module
#right_format = '$line_break$cmd_duration'
add_newline = false

[line_break]
disabled = true

[fill]
symbol = ' '

[os]
disabled = false
format = '[$symbol]($style)'
style = 'fg:#659CD9 bg:#F2F2F2 inverted'

[os.symbols]
Macos = "ï…¹ "
Windows = "ï…º "
Ubuntu = "ï…¼ "

[sudo]
disabled = false
symbol = "ğŸ§™"
format = '[$symbol ]($style)'
style = "bg:#659CD9"

[shell]
disabled = false
zsh_indicator = 'îš‘'
powershell_indicator = 'îšƒ'
style = 'fg:#F2F2F2 bg:#659CD9'
format = '[$indicator ]($style)'

[directory]
format = "[ \uf07c  $path ]($style)"
style = "fg:#F2F2F2 bg:#3960A7"

[git_branch]
format = '[ $symbol$branch(:$remote_branch) ]($style)'
symbol = "îœ‰ ï˜ "
style = "fg:#1C3A5E bg:#9C9C9C"

[git_status]
format = '([\[$all_status$ahead_behind\]]($style))'
style = "fg:#1C3A5E bg:#9C9C9C"

[git_commit]
disabled = false
format = '[\((#$hash)$tag\)]($style)'
tag_disabled = false
only_detached = true
style = "fg:#1C3A5E bg:#9C9C9C"

[git_metrics]
format = '([ +$added ]($added_style))([-$deleted ]($deleted_style))'
added_style = "fg:#1C3A5E bg:#F2F2F2"
deleted_style = "fg:red bg:#F2F2F2"
disabled = false

[cmd_duration]
disabled = false
format = "[[î‚¶](fg:#5C7F6A)â±ï¸ $duration[î‚´](fg:#5C7F6A)]($style)"
style = "#5C7F6A inverted"

[character]
disabled = true
success_symbol = '[â¯](bold #F2F2F2) '
error_symbol = '[â¯](bold red) '

[time]
disabled = true
time_format = "%R"                                      # Hour:Minute Format
style = "bg:#1d2230"
format = '[[ ó±‘ $time ](bg:#1C3A5E fg:#8DFBD2)]($style)'

[azure]
disabled = false
format = '[î‚¶](fg:#3376CD)[$symbol($subscription)]($style)[î‚´](fg:#3376CD)'
style = 'fg:#3376CD bold inverted'
symbol = 'ó° … '

[golang]
disabled = false
format = '[î‚¶](fg:cyan)[$symbol($version )]($style)[î‚´](fg:cyan)'
style = 'fg:cyan inverted'
symbol = 'î˜§ '

[status]
disabled = true
symbol = 'ğŸ”´ '
